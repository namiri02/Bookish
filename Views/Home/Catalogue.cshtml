@model Bookish.Models.Book.BookViewModel

@{
    ViewData["Title"] = "Catalogue";
}

<div class="text-center">
    <h1 class="display-4">Bookish</h1>
    <p>Catalogue</p>
</div>

<div class="text-center">
    <button><a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="BookForm">Add Book</a></button>
</div>

<div>
    <h2>Books</h2>
</div>

<table class="table">
    <thead>
    <tr>
        <th>
            ISBN
        </th>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
        </th>
        <th></th>
        
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ListOfBooks)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <button><a class="nav-link text-dark" asp-area="" asp-controller="Book" 
                           asp-route-isbn="@item.ISBN"
                           asp-route-title="@item.Title" 
                           asp-route-author="@item.Author" 
                           asp-action="BookEdit">Edit Book Details</a></button>
            </td>
            <td>
                <button><a class="nav-link text-dark" asp-area="" asp-controller="Book" 
                           asp-route-isbn="@item.ISBN"
                           asp-action="BookDelete">Delete Book</a></button>
            </td>
            <td>
                <button><a class="nav-link text-dark" asp-area="" asp-controller="Copy" 
                           asp-route-isbn="@item.ISBN"
                           asp-action="Copy">Copies</a></button>
            </td>
        </tr>
    }
    </tbody>
</table>
